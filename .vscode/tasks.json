{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with Clang", //这个任务的名字在launch.json最后一项配置
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++17",
          "-stdlib=libc++",
          "-I",
          "./3rdParty/Mac/include",
          "-L",
          "./3rdParty/Mac/lib",
          "-g",
          // 生成调试信息，GUN可使用该参数
          "${file}",
          // file指正在打开的文件
          "-o",
          // 生成可执行文件
          "${fileDirname}/${fileBasenameNoExtension}"
          // fileDirname指正在打开的文件所在的文件夹
          // fileBasenammeNoExtension指没有扩展名的文件，unix中可执行文件属于此类
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }